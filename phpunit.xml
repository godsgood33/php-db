<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	colors="true"
	verbose="true">
	<testsuites>
		<testsuite name="Tests">
			<directory suffix=".php">tests/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="false">
			<directory suffix=".php">src/</directory>
		</whitelist>
	</filter>
</phpunit>